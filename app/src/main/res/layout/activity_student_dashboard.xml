<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#E3F2FD">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Dashboard"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnNewComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit New Complaint"
        android:textSize="20sp"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:elevation="6dp"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnViewComplaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Complaints"
        android:textSize="20sp"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:elevation="6dp" />


    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help Support"
        android:textSize="20sp"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:elevation="6dp"/>
    <Button
        android:id="@+id/btndeleteComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete My Complaint"
        android:textSize="20sp"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:elevation="6dp" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="20sp"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:minHeight="60dp"
        android:elevation="6dp" />
</LinearLayout>
